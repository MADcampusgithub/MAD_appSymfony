<h1>Détail de l'annonce {{ annonce.id }}</h1>

<table>
    <tr>
        <td>Titre :</td>
        <td>{{ annonce.titre }}</td>
    </tr>
    <tr>
        <td>Auteur :</td>
        <td>{{ annonce.auteur }}</td>
    </tr>
    <tr>
        <td>Contenu :</td>
        <td>{{ annonce.contenu }}</td>
    </tr>
    {% if annonce.categorie.id != 0 %}
        <tr>
            <td>Catégorie :</td>
            <td>{{ annonce.categorie.libelle }}</td>
        </tr>
    {% endif %}

    {% if annonce.livraisons|length != 0 %}
        <tr>
            <td>Livraison :</td>
            <td><ul>
            {% for l in annonce.livraison %}
                <li>{{ l.libelle }}</li>
            {% endfor %}
            </ul></td>
        </tr>
    {% endif %}
    
</table>

{% if annonce.image is not null %}
    <p><img src="/img/{{ annonce.image.url }}"></p>
{% endif %}


<a href="{{ path('modifierAnnonce', {'id': annonce.id }) }}" style="text-decoration: none;">
    <input type="button" value="Modifier">
</a>

<a href="{{ path('supprimerAnnonce', {'id': annonce.id }) }}" style="text-decoration: none;">
    <input type="button" value="Supprimer">
</a>